{% extends 'base.html.twig' %}

{% block title %}Liste des Filières{% endblock %}

{% block body %}
<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-10">
            <div class="card shadow border-0">
                <div class="card-header bg-primary text-white d-flex justify-content-between align-items-center">
                    <h2 class="h4 mb-0"><i class="fas fa-layer-group"></i> Liste des Filières</h2>
                    <a href="{{ path('app_filiere_new') }}" class="btn btn-light text-primary fw-bold btn-sm">
                        <i class="fas fa-plus-circle"></i> Nouvelle
                    </a>
                </div>
                <div class="card-body p-0">
                    <div class="table-responsive">
                        <table class="table table-hover table-striped mb-0 align-middle">
                            <thead class="table-light">
                                <tr>
                                    <th class="py-3 ps-3">ID</th>
                                    <th class="py-3">Nom</th>
                                    <th class="py-3 text-end pe-3">Actions</th>
                                </tr>
                            </thead>
                            <tbody>
                            {% for filiere in filieres %}
                                <tr>
                                    <td class="ps-3 fw-bold text-muted">#{{ filiere.id }}</td>
                                    <td class="fw-bold">{{ filiere.nom }}</td>
                                    <td class="text-end pe-3">
                                        <a href="{{ path('app_filiere_show', {'id': filiere.id}) }}" class="btn btn-sm btn-outline-secondary me-1">
                                            <i class="fas fa-eye"></i>
                                        </a>
                                        <a href="{{ path('app_filiere_edit', {'id': filiere.id}) }}" class="btn btn-sm btn-primary">
                                            <i class="fas fa-pen"></i>
                                        </a>
                                    </td>
                                </tr>
                            {% else %}
                                <tr>
                                    <td colspan="3" class="text-center py-4 text-muted">
                                        <i class="fas fa-folder-open fa-2x mb-3"></i><br>Aucune filière trouvée.
                                    </td>
                                </tr>
                            {% endfor %}
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
{% endblock %}
