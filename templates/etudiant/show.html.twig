{% extends 'base.html.twig' %}

{% block title %}Détails Étudiant{% endblock %}

{% block body %}
<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card shadow border-0">
                <div class="card-header bg-primary text-white d-flex justify-content-between align-items-center px-4">
                    <h2 class="h4 mb-0"><i class="fas fa-user-graduate"></i> Fiche Étudiant</h2>
                    <span class="badge bg-white text-primary">ID: {{ etudiant.id }}</span>
                </div>
                <div class="card-body">
                    <table class="table table-bordered">
                        <tbody>
                            <tr>
                                <th class="bg-light w-25">Nom</th>
                                <td class="fw-bold">{{ etudiant.nom|upper }}</td>
                            </tr>
                            <tr>
                                <th class="bg-light">Prénom</th>
                                <td>{{ etudiant.prenom }}</td>
                            </tr>
                            <tr>
                                <th class="bg-light">Session</th>
                                <td>
                                    {% if etudiant.session %}
                                        {{ etudiant.session.diplome.intitule }} ({{ etudiant.session.annee }})
                                    {% else %}
                                        <span class="text-muted">Non assigné</span>
                                    {% endif %}
                                </td>
                            </tr>
                            <tr>
                                <th class="bg-light">Moyenne</th>
                                <td class="fw-bold fs-5">{{ etudiant.moyenne ? etudiant.moyenne ~ '/20' : '-' }}</td>
                            </tr>
                            <tr>
                                <th class="bg-light">Décision</th>
                                <td>
                                    {% if etudiant.estAdmis %}
                                        <span class="badge bg-success fs-6">ADMIS</span>
                                    {% else %}
                                        <span class="badge bg-danger fs-6">REFUSÉ / EN ATTENTE</span>
                                    {% endif %}
                                </td>
                            </tr>
                        </tbody>
                    </table>
                </div>
                <div class="card-footer text-center bg-white">
                    <a href="{{ path('app_etudiant_index') }}" class="btn btn-outline-secondary me-2">
                        <i class="fas fa-list"></i> Liste
                    </a>
                    <a href="{{ path('app_etudiant_edit', {'id': etudiant.id}) }}" class="btn btn-primary">
                        <i class="fas fa-edit"></i> Modifier
                    </a>
                </div>
            </div>
        </div>
    </div>
</div>
{% endblock %}
