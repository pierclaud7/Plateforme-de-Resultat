{% extends 'base.html.twig' %}

{% block title %}Liste des Sessions{% endblock %}

{% block body %}
<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-10">
            <div class="card shadow border-0">
                <div class="card-header bg-primary text-white d-flex justify-content-between align-items-center">
                    <h2 class="h4 mb-0"><i class="fas fa-calendar-alt"></i> Sessions d'Examen</h2>
                    <a href="{{ path('app_session_new') }}" class="btn btn-light text-primary fw-bold btn-sm">
                        <i class="fas fa-plus-circle"></i> Nouvelle
                    </a>
                </div>

                <div class="card-body p-0">
                    <div class="table-responsive">
                        <table class="table table-hover table-striped mb-0 align-middle">
                            <thead class="table-light">
                                <tr>
                                    <th class="py-3 ps-3">Année</th>
                                    <th class="py-3">Diplôme</th>
                                    <th class="py-3">Statut</th>
                                    <th class="py-3">Taux de Réussite</th>
                                    <th class="py-3 text-end pe-3">Actions</th>
                                </tr>
                            </thead>
                            <tbody>
                            {% for session in sessions %}
                                <tr>
                                    <td class="ps-3 fw-bold">{{ session.annee }}</td>
                                    <td>
                                        <i class="fas fa-graduation-cap text-muted me-1"></i>
                                        {{ session.diplome ? session.diplome.intitule : 'Non défini' }}
                                    </td>
                                    <td>
                                        {# Badges dynamiques selon le statut #}
                                        {% if session.statut == 'Publié' %}
                                            <span class="badge bg-success">Publié</span>
                                        {% elseif session.statut == 'Validé' %}
                                            <span class="badge bg-info text-dark">Validé</span>
                                        {% else %}
                                            <span class="badge bg-secondary">Brouillon</span>
                                        {% endif %}
                                    </td>
                                    <td>
                                        {% if session.tauxReussite %}
                                            <span class="fw-bold text-primary">{{ session.tauxReussite }}%</span>
                                        {% else %}
                                            <span class="text-muted small">-</span>
                                        {% endif %}
                                    </td>
                                    <td class="text-end pe-3">
                                        <a href="{{ path('app_session_show', {'id': session.id}) }}" class="btn btn-sm btn-outline-secondary me-1" title="Voir">
                                            <i class="fas fa-eye"></i>
                                        </a>
                                        <a href="{{ path('app_session_edit', {'id': session.id}) }}" class="btn btn-sm btn-primary" title="Modifier">
                                            <i class="fas fa-pen"></i>
                                        </a>
                                    </td>
                                </tr>
                            {% else %}
                                <tr>
                                    <td colspan="5" class="text-center py-4 text-muted">
                                        <i class="fas fa-calendar-times fa-2x mb-3"></i><br>
                                        Aucune session trouvée.
                                    </td>
                                </tr>
                            {% endfor %}
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
{% endblock %}
