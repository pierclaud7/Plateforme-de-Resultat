{% extends 'base.html.twig' %}

{% block title %}Modifier Diplôme{% endblock %}

{% block body %}
<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card shadow border-0">
                <div class="card-header bg-primary text-white">
                    <h2 class="h4 mb-0"><i class="fas fa-edit"></i> Modifier le Diplôme</h2>
                </div>
                <div class="card-body">
                    {{ form_start(form) }}

                        <div class="mb-3">
                            {{ form_row(form.intitule) }}
                        </div>
                        <div class="mb-3">
                            {{ form_row(form.filiere) }}
                        </div>

                        <button class="btn btn-primary w-100 mt-3 shadow-sm">
                            <i class="fas fa-check"></i> Mettre à jour
                        </button>

                    {{ form_end(form) }}
                </div>
                <div class="card-footer d-flex justify-content-between align-items-center bg-white">
                    <a href="{{ path('app_diplome_index') }}" class="btn btn-outline-secondary btn-sm">
                        <i class="fas fa-arrow-left"></i> Retour
                    </a>
                    {# Le bouton supprimer standard #}
                    {{ include('diplome/_delete_form.html.twig') }}
                </div>
            </div>
        </div>
    </div>
</div>
{% endblock %}
