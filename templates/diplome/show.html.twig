{% extends 'base.html.twig' %}

{% block title %}Détails du Diplôme{% endblock %}

{% block body %}
    <h1>Détails du Diplôme</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ diplome.id }}</td>
            </tr>
            <tr>
                <th>Intitulé</th>
                <td>{{ diplome.intitule }}</td>
            </tr>
            <tr>
                <th>Filière</th>
                <td>
                    {{ diplome.filiere ? diplome.filiere.nom : 'Non défini' }}
                </td>
            </tr>
        </tbody>
    </table>

    <br>

    <a href="{{ path('app_diplome_index') }}">Retour à la liste</a>

    <a href="{{ path('app_diplome_edit', {'id': diplome.id}) }}" style="margin-left: 15px;">Modifier</a>

    <br><br>

    {{ include('diplome/_delete_form.html.twig') }}
{% endblock %}
