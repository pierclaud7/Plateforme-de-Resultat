{% extends 'base.html.twig' %}

{% block title %}Détails Diplôme{% endblock %}

{% block body %}
<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card shadow border-0">
                <div class="card-header bg-primary text-white d-flex justify-content-between align-items-center">
                    <h2 class="h4 mb-0"><i class="fas fa-graduation-cap"></i> Fiche Diplôme</h2>
                    <span class="badge bg-white text-primary">ID: {{ diplome.id }}</span>
                </div>
                <div class="card-body">
                    <table class="table table-bordered">
                        <tbody>
                            <tr>
                                <th class="bg-light w-25">Intitulé</th>
                                <td class="fw-bold">{{ diplome.intitule }}</td>
                            </tr>
                            <tr>
                                <th class="bg-light">Filière</th>
                                <td>
                                    {{ diplome.filiere.nom }}
                                </td>
                            </tr>
                        </tbody>
                    </table>
                </div>
                <div class="card-footer text-center bg-white">
                    <a href="{{ path('app_diplome_index') }}" class="btn btn-outline-secondary me-2">
                        <i class="fas fa-list"></i> Liste
                    </a>
                    <a href="{{ path('app_diplome_edit', {'id': diplome.id}) }}" class="btn btn-primary">
                        <i class="fas fa-edit"></i> Modifier
                    </a>
                </div>
            </div>
        </div>
    </div>
</div>
{% endblock %}
